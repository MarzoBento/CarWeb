@*@model  CarWeb.Models.Lotes*@
@model List<string>


@{
    ViewBag.Title = "Index";
}

<h2>Consultar Arquivos por Lotes</h2>

@using (@Html.BeginForm("Index", "Download", FormMethod.Post))
{

    <div class="form-group">
        <div class="col-md-5">
            @Html.TextBox("pesquisaLote", null, new { @id = "txtPesquisa", @class = "form-control long", placeholder = "Número do lote" })
        </div>
        <div class="btn btn-default">
            <button class="btn btn-primary" type="submit">Pesquisar</button>
        </div>
    </div>

}
<p>

</p>
<table class="table">
    <tr>
        <th>
            Arquivos
        </th>

        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (string file in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name="type" value="@file" />@file
                </td>
               
            </tr>
        }
    }


</table>

