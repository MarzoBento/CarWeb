@model CarWeb.Models.Lotes

@{
    ViewBag.Title = "Edit";
}

<h2>Detalhes</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Lotes</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idlote)

        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.lote, htmlAttributes: new { @class = "control-label col-md-1" })
                @Html.EditorFor(model => model.lote, new { htmlAttributes = new { @class = "form-control long" } })
                @Html.ValidationMessageFor(model => model.lote, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" value="Salvar" class="btn btn-info" id="save" />
                @Html.ActionLink("Voltar a Lista", "Index", null, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
