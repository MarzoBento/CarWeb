<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cadastramento Rural", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" id="cadastros">Cadastros <span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="themes">
                            <li>@Html.ActionLink("Cadastradores", "Index", "Cadastradors")</li>
                            <li>@Html.ActionLink("Lotes", "Index", "Lotes")</li>
                            <li>@Html.ActionLink("Municípios", "Index", "Municipios")</li>
                            <li>@Html.ActionLink("Proprietários", "Index", "Propietarios")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" id="Importacao">Importação de Registros <span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="themes">
                            <li>@Html.ActionLink("Importar Relatório SEIA", "Index", "ImportacaoSeias")</li>
                            <li>@Html.ActionLink("Importar Planilha de Cadastro", "Index", "ImportacaoCadastro")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" id="consultas">Cadastramento Rural <span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="themes">
                            <li>@Html.ActionLink("Cadastro Rural", "Index", "Cadastros")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                @DateTime.Now.Year - Cadastramento Rural Bahia
            </p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
